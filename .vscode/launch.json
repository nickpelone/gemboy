    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug - Tetris",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/exe/gemboy",
            "args": ["${workspaceRoot}/roms/tetris.gb"],
            "useBundler": true
        },
        {
            "name": "RSpec - all",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/bin/rspec",
            "args": [
                "-I",
                "${workspaceRoot}"
            ]
        }
    ]
}